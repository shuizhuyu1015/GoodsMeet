@import "../stepper-template/stepper-template.wxss";

.goods-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
  border-radius: 8px;
  background-color: white;
}

.select-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 56rpx;
  width: 96rpx;
  flex-shrink: 0;
}

.select-img {
  width: 36rpx;
  height: 36rpx;
}

.detail-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 20rpx 20rpx 0;
}

.goods-img {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}

.title-price-num {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.price-num {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goods-price {
  font-size: 28rpx;
  color: #FF5353;
}

.goods-stepper {
  position: absolute;
  right: 40rpx;
}